{
  "name": "@oliver139/eslint-config",
  "type": "module",
  "version": "1.0.5",
  "packageManager": "pnpm@9.13.2",
  "description": "Oliver's ESLint config preset powered by @antfu/eslint-config",
  "author": "Oliver Mak",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oliver139/eslint-config"
  },
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "bin",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rollup --config=rollup.config.ts --configPlugin rollup-plugin-esbuild",
    "lint": "nr build && eslint . --cache --fix",
    "lint:check": "nr build && eslint . --cache",
    "lint:inspect": "nr build && eslint --inspect-config",
    "lint:gen": "eslint-config-inspector build --outDir docs",
    "prepare": "simple-git-hooks",
    "prepack": "nr lint:gen && nr build",
    "release": "bumpp && pnpm publish"
  },
  "peerDependencies": {
    "eslint": "^9.10.0",
    "eslint-plugin-vuejs-accessibility": ">=2.4.1"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-vuejs-accessibility": {
      "optional": true
    }
  },
  "dependencies": {
    "@antfu/eslint-config": "^3.9.2"
  },
  "devDependencies": {
    "@antfu/ni": "^0.23.1",
    "@eslint/config-inspector": "^0.5.6",
    "@rollup/plugin-json": "^6.1.0",
    "@tsconfig/recommended": "1.0.8",
    "@types/node": "^22.9.0",
    "bumpp": "^9.8.1",
    "eslint": "^9.15.0",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "lint-staged": "^15.2.10",
    "rollup": "^4.27.3",
    "rollup-plugin-delete": "^2.1.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "simple-git-hooks": "^2.11.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "pnpm": {
    "overrides": {
      "cross-spawn@>=7.0.0 <7.0.5": ">=7.0.5",
      "micromatch@<4.0.8": ">=4.0.8"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --cache --fix"
  }
}
